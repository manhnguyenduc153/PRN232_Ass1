@model Assignmen_PRN232__.Dto.CategorySaveDto

<!-- CategoryId (hidden) -->
<input type="hidden" name="CategoryId" value="@Model.CategoryId" />

<div class="modal-body">
    <!-- Category Name -->
    <div class="mb-3">
        <label for="categoryName" class="form-label">Category Name <span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="categoryName" name="CategoryName" 
               value="@Model.CategoryName" required 
               placeholder="Enter category name">
        <small class="form-text text-muted">e.g., Technology, Business, Sports</small>
    </div>

    <!-- Description -->
    <div class="mb-3">
        <label for="categoryDescription" class="form-label">Description</label>
        <textarea class="form-control" id="categoryDescription" name="CategoryDesciption" rows="3" 
                  placeholder="Enter description">@Model.CategoryDesciption</textarea>
    </div>

    <!-- Parent Category -->
    <div class="mb-3">
        <label for="parentCategoryId" class="form-label">Parent Category</label>
        <input type="number" class="form-control" id="parentCategoryId" name="ParentCategoryId" 
               value="@(Model.ParentCategoryId > 0 ? Model.ParentCategoryId : "")" 
               placeholder="Leave empty for top-level category">
        <small class="form-text text-muted">Optional: Set to create sub-categories</small>
    </div>

    <!-- Is Active -->
    <div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="isActive" name="IsActive" 
                   value="true" @(Model.IsActive == true ? "checked" : "")>
            <label class="form-check-label" for="isActive">
                Active
            </label>
        </div>
        <small class="form-text text-muted">Check this box to activate the category</small>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary" form="categoryForm">
        <i class="bi bi-save"></i> @(Model.CategoryId > 0 ? "Update" : "Create")
    </button>
</div>
