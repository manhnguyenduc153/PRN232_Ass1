@using Assignmen_PRN232__.Dto
@model Assignmen_PRN232_1.DTOs.Common.PagingResponse<NewsArticleDto>

@{
    ViewData["Title"] = "Public News";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-newspaper"></i> Public News</h2>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="keyword" value="@Context.Request.Query["keyword"]" class="form-control" placeholder="Search by title, headline...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Page Size</label>
                    <select name="pageSize" class="form-select">
                        <option value="10" selected="@(Model.PageSize == 10)">10</option>
                        <option value="20" selected="@(Model.PageSize == 20)">20</option>
                        <option value="50" selected="@(Model.PageSize == 50)">50</option>
                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">News Article List (@Model.TotalRecords records)</h5>
        </div>
        <div class="card-body p-0">
            @if (Model?.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 10%">ID</th>
                                <th style="width: 15%">Title</th>
                                <th style="width: 15%">Headline</th>
                                <th style="width: 12%">Category</th>
                                <th style="width: 20%">Tags</th>
                                <th style="width: 12%">Created Date</th>
                                <th style="width: 8%">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td><small>@(item.NewsArticleId ?? "N/A")</small></td>
                                    <td><span class="badge bg-info text-dark">@(item.NewsTitle ?? "N/A")</span></td>
                                    <td>@(item.Headline ?? "")</td>
                                    <td>@(item.CategoryName ?? "N/A")</td>
                                    <td>
                                        @if (item.Tags != null && item.Tags.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var tag in item.Tags)
                                                {
                                                    <span class="badge bg-secondary">@tag.TagName</span>
                                                }
                                            </div>
                                        }
                                    </td>
                                    <td>@(item.CreatedDate?.ToString("dd/MM/yyyy") ?? "")</td>
                                    <td>
                                        @if (item.NewsStatus == true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No news articles found</p>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalRecords > Model.PageSize)
    {
        var totalPages = (int)Math.Ceiling((double)Model.TotalRecords / Model.PageSize);
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)" asp-route-pageSize="@Model.PageSize" asp-route-keyword="@Context.Request.Query["keyword"]">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>

                @{
                    int startPage = Math.Max(1, Model.PageIndex - 2);
                    int endPage = Math.Min(totalPages, Model.PageIndex + 2);

                    if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-pageIndex="1" asp-route-pageSize="@Model.PageSize" asp-route-keyword="@Context.Request.Query["keyword"]">1</a>
                        </li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageIndex="@i" asp-route-pageSize="@Model.PageSize" asp-route-keyword="@Context.Request.Query["keyword"]">@i</a>
                        </li>
                    }

                    if (endPage < totalPages)
                    {
                        if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-pageIndex="@totalPages" asp-route-pageSize="@Model.PageSize" asp-route-keyword="@Context.Request.Query["keyword"]">@totalPages</a>
                        </li>
                    }
                }

                <li class="page-item @(Model.PageIndex >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)" asp-route-pageSize="@Model.PageSize" asp-route-keyword="@Context.Request.Query["keyword"]">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="text-center text-muted">
            Showing @((Model.PageIndex - 1) * Model.PageSize + 1) to @Math.Min(Model.PageIndex * Model.PageSize, Model.TotalRecords) of @Model.TotalRecords entries
        </div>
    }
</div>
