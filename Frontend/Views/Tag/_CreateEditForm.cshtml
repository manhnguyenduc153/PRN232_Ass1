@model Assignmen_PRN232__.Dto.TagSaveDto

<!-- TagId (hidden) -->
<input type="hidden" name="TagId" value="@Model.TagId" />

<div class="modal-body">
    <!-- Tag Name -->
    <div class="mb-3">
        <label for="tagName" class="form-label">Tag Name <span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="tagName" name="TagName" 
               value="@Model.TagName" required 
               placeholder="Enter tag name">
        <small class="form-text text-muted">e.g., Technology, News, Business</small>
    </div>

    <!-- Note -->
    <div class="mb-3">
        <label for="note" class="form-label">Note</label>
        <textarea class="form-control" id="note" name="Note" rows="3" 
                  placeholder="Enter note or description">@Model.Note</textarea>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary" form="tagForm">
        <i class="bi bi-save"></i> @(Model.TagId > 0 ? "Update" : "Create")
    </button>
</div>

