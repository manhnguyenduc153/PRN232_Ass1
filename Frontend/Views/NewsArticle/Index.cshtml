@using System.Linq
@using Assignmen_PRN232__.Dto
@model Assignmen_PRN232_1.DTOs.Common.PagingResponse<NewsArticleDto>

@{
    ViewData["Title"] = "News Article Management";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
    var keyword = ViewBag.Keyword ?? "";
    var categoryId = ViewBag.CategoryId ?? 0;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalRecords = ViewBag.TotalRecords ?? 0;
    var categories = (List<CategoryDto>?)ViewBag.Categories ?? new List<CategoryDto>();
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-newspaper"></i> News Article Management</h2>
        </div>
        <div class="col-md-6 text-end">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEditModal" 
                    onclick="loadCreateForm()">
                <i class="bi bi-plus-circle"></i> Create New Article
            </button>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Search</label>
                    <input type="text" name="keyword" value="@keyword" class="form-control" placeholder="Search by title, headline...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select name="categoryId" class="form-select">
                        <option value="0">All Categories</option>
                        @foreach (var cat in categories)
                        {
                            <option value="@cat.CategoryId" selected="@(categoryId == cat.CategoryId)">@cat.CategoryName</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Page Size</label>
                    <select name="pageSize" class="form-select">
                        <option value="5" selected="@(pageSize == 5)">5</option>
                        <option value="10" selected="@(pageSize == 10)">10</option>
                        <option value="20" selected="@(pageSize == 20)">20</option>
                        <option value="50" selected="@(pageSize == 50)">50</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">News Article List (@totalRecords records)</h5>
        </div>
        <div class="card-body p-0">
            @if (Model?.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 8%">ID</th>
                                <th style="width: 12%">Title</th>
                                <th style="width: 12%">Headline</th>
                                <th style="width: 10%">Category</th>
                                <th style="width: 18%">Tags</th>
                                <th style="width: 10%">Created Date</th>
                                <th style="width: 8%">Status</th>
                                <th style="width: 12%" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <small>@(item.NewsArticleId ?? "N/A")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-dark">@(item.NewsTitle ?? "N/A")</span>
                                    </td>
                                    <td>@(item.Headline ?? "")</td>
                                    <td>
                                        @(item.CategoryName ?? "N/A")
                                    </td>
                                    <td>
                                        @if (item.Tags != null && item.Tags.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var tag in item.Tags)
                                                {
                                                    <span class="badge bg-secondary position-relative" style="padding-right: 20px;">
                                                        @tag.TagName
                                                        <button type="button" class="btn-close btn-close-white" style="position: absolute; right: 2px; top: 2px; width: 14px; height: 14px;" 
                                                                onclick="removeTag('@item.NewsArticleId', @tag.TagId)" title="Remove tag"></button>
                                                    </span>
                                                }
                                                <button type="button" class="btn btn-sm btn-outline-secondary" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#addTagModal"
                                                        onclick="loadAddTagForm('@item.NewsArticleId')">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-secondary" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#addTagModal"
                                                    onclick="loadAddTagForm('@item.NewsArticleId')">
                                                <i class="bi bi-plus"></i> Add Tag
                                            </button>
                                        }
                                    </td>
                                    <td>
                                        @(item.CreatedDate?.ToString("dd/MM/yyyy") ?? "")
                                    </td>
                                    <td>
                                        @if (item.NewsStatus == true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-warning" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#createEditModal"
                                                    onclick="loadEditForm('@item.NewsArticleId')" 
                                                    title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <form method="post" asp-action="Delete" asp-route-id="@item.NewsArticleId" style="display:inline;" 
                                                  onsubmit="return confirm('Delete &quot;@item.NewsTitle&quot;?');">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No news articles found</p>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEditModal"
                            onclick="loadCreateForm()">
                        Create First Article
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" 
                       asp-action="Index" 
                       asp-route-pageIndex="@(currentPage - 1)" 
                       asp-route-pageSize="@pageSize" 
                       asp-route-keyword="@keyword"
                       asp-route-categoryId="@categoryId">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>

                <!-- Page Numbers -->
                @{
                    int startPage = Math.Max(1, currentPage - 2);
                    int endPage = Math.Min(totalPages, currentPage + 2);

                    if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-pageIndex="1" 
                               asp-route-pageSize="@pageSize" 
                               asp-route-keyword="@keyword"
                               asp-route-categoryId="@categoryId">1</a>
                        </li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-pageIndex="@i" 
                               asp-route-pageSize="@pageSize" 
                               asp-route-keyword="@keyword"
                               asp-route-categoryId="@categoryId">@i</a>
                        </li>
                    }

                    if (endPage < totalPages)
                    {
                        if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-pageIndex="@totalPages" 
                               asp-route-pageSize="@pageSize" 
                               asp-route-keyword="@keyword"
                               asp-route-categoryId="@categoryId">@totalPages</a>
                        </li>
                    }
                }

                <!-- Next Button -->
                <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                    <a class="page-link" 
                       asp-action="Index" 
                       asp-route-pageIndex="@(currentPage + 1)" 
                       asp-route-pageSize="@pageSize" 
                       asp-route-keyword="@keyword"
                       asp-route-categoryId="@categoryId">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Pagination Info -->
        <div class="text-center text-muted">
            Showing @((currentPage - 1) * pageSize + 1) to @Math.Min(currentPage * pageSize, totalRecords) of @totalRecords entries
        </div>
    }
</div>

<!-- Create/Edit Modal -->
<div class="modal fade" id="createEditModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Create News Article</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <!-- Form wrap around modal body and footer -->
            <form id="newsArticleForm" asp-action="Save" method="post">
                @Html.AntiForgeryToken()
                <div id="modalBody">
                    <div class="modal-body text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Tag Modal -->
<div class="modal fade" id="addTagModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addTagModalTitle">Add Tag to Article</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div id="addTagModalBody">
                <div class="modal-body text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load Create Form (trống)
        function loadCreateForm() {
            $('#modalTitle').text('Create New News Article');
            $.get('@Url.Action("GetCreateEditForm", "NewsArticle")', function(html) {
                $('#modalBody').html(html);
            }).fail(function() {
                alert('Error loading form');
            });
        }

        // Load Edit Form (với data)
        function loadEditForm(id) {
            $('#modalTitle').text('Edit News Article');
            $.get('@Url.Action("GetCreateEditForm", "NewsArticle")', { id: id }, function(html) {
                $('#modalBody').html(html);
            }).fail(function() {
                alert('Error loading form');
            });
        }

        // Load Add Tag Form
        var currentNewsArticleId = '';
        function loadAddTagForm(newsArticleId) {
            currentNewsArticleId = newsArticleId;
            $('#addTagModalTitle').text('Add Tag to Article');
            
            // Load danh sách tất cả tags
            $.ajax({
                url: '@Url.Action("GetAllTags", "NewsArticle")',
                type: 'GET',
                success: function(tags) {
                    let tagSelect = `<select id="tagSelect" class="form-select">
                                        <option value="">-- Select a Tag --</option>`;
                    tags.forEach(function(tag) {
                        tagSelect += `<option value="${tag.tagId}">${tag.tagName}</option>`;
                    });
                    tagSelect += `</select>`;
                    
                    $('#addTagModalBody').html(`
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="tagSelect" class="form-label">Choose Tag <span class="text-danger">*</span></label>
                                ${tagSelect}
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" onclick="addTagToArticle()">
                                <i class="bi bi-plus-circle"></i> Add Tag
                            </button>
                        </div>
                    `);
                },
                error: function() {
                    alert('Error loading tags');
                }
            });
        }

        // Add Tag to Article
        function addTagToArticle() {
            const tagId = $('#tagSelect').val();
            if (!tagId) {
                alert('Please select a tag');
                return;
            }

            $.ajax({
                url: '@Url.Action("AddTag", "NewsArticle")',
                type: 'POST',
                data: { id: currentNewsArticleId, tagId: tagId },
                success: function(response) {
                    if (response.success) {
                        alert('Tag added successfully!');
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function(xhr) {
                    alert('Error adding tag');
                }
            });
        }

        // Remove Tag from Article
        function removeTag(newsArticleId, tagId) {
            if (!confirm('Remove this tag?')) return;

            $.ajax({
                url: '@Url.Action("RemoveTag", "NewsArticle")',
                type: 'POST',
                data: { id: newsArticleId, tagId: tagId },
                success: function(response) {
                    if (response.success) {
                        alert('Tag removed successfully!');
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function(xhr) {
                    alert('Error removing tag');
                }
            });
        }
    </script>
}
