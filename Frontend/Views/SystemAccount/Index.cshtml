@using System.Linq
@using Assignmen_PRN232__.Dto
@model Assignmen_PRN232_1.DTOs.Common.PagingResponse<SystemAccountDto>

@{
    ViewData["Title"] = "System Account Management";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
    var keyword = ViewBag.Keyword ?? "";
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalRecords = ViewBag.TotalRecords ?? 0;
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-people"></i> System Account Management</h2>
        </div>
        <div class="col-md-6 text-end">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEditModal" 
                    onclick="loadCreateForm()">
                <i class="bi bi-plus-circle"></i> Create New Account
            </button>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="keyword" value="@keyword" class="form-control" placeholder="Search by name or email...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Page Size</label>
                    <select name="pageSize" class="form-select">
                        <option value="5" selected="@(pageSize == 5)">5</option>
                        <option value="10" selected="@(pageSize == 10)">10</option>
                        <option value="20" selected="@(pageSize == 20)">20</option>
                        <option value="50" selected="@(pageSize == 50)">50</option>
                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">System Account List (@totalRecords records)</h5>
        </div>
        <div class="card-body p-0">
            @if (Model?.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 10%">ID</th>
                                <th style="width: 20%">Account Name</th>
                                <th style="width: 25%">Email</th>
                                <th style="width: 20%">Role</th>
                                <th style="width: 25%" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.AccountId</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@(item.AccountName ?? "N/A")</span>
                                    </td>
                                    <td>@(item.AccountEmail ?? "")</td>
                                    <td>
                                        @{
                                            var roleName = item.AccountRole switch
                                            {
                                                0 => "Admin",
                                                1 => "Moderator",
                                                2 => "User",
                                                _ => "Unknown"
                                            };
                                        }
                                        <span class="badge bg-warning">@roleName</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-warning" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#createEditModal"
                                                    onclick="loadEditForm(@item.AccountId)" 
                                                    title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <form method="post" asp-action="Delete" asp-route-id="@item.AccountId" style="display:inline;" 
                                                  onsubmit="return confirm('Delete &quot;@item.AccountName&quot;?');">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No system accounts found</p>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEditModal"
                            onclick="loadCreateForm()">
                        Create First Account
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" 
                       asp-action="Index" 
                       asp-route-pageIndex="@(currentPage - 1)" 
                       asp-route-pageSize="@pageSize" 
                       asp-route-keyword="@keyword">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>

                <!-- Page Numbers -->
                @{
                    int startPage = Math.Max(1, currentPage - 2);
                    int endPage = Math.Min(totalPages, currentPage + 2);

                    if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-pageIndex="1" 
                               asp-route-pageSize="@pageSize" 
                               asp-route-keyword="@keyword">1</a>
                        </li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-pageIndex="@i" 
                               asp-route-pageSize="@pageSize" 
                               asp-route-keyword="@keyword">@i</a>
                        </li>
                    }

                    if (endPage < totalPages)
                    {
                        if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-pageIndex="@totalPages" 
                               asp-route-pageSize="@pageSize" 
                               asp-route-keyword="@keyword">@totalPages</a>
                        </li>
                    }
                }

                <!-- Next Button -->
                <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                    <a class="page-link" 
                       asp-action="Index" 
                       asp-route-pageIndex="@(currentPage + 1)" 
                       asp-route-pageSize="@pageSize" 
                       asp-route-keyword="@keyword">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Pagination Info -->
        <div class="text-center text-muted">
            Showing @((currentPage - 1) * pageSize + 1) to @Math.Min(currentPage * pageSize, totalRecords) of @totalRecords entries
        </div>
    }
</div>

<!-- Create/Edit Modal -->
<div class="modal fade" id="createEditModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Create System Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <!-- Form wrap around modal body and footer -->
            <form id="systemAccountForm" asp-action="Save" method="post">
                @Html.AntiForgeryToken()
                <div id="modalBody">
                    <div class="modal-body text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function loadCreateForm() {
            $('#modalTitle').text('Create New System Account');
            $.get('@Url.Action("GetCreateEditForm", "SystemAccount")', function(html) {
                $('#modalBody').html(html);
                $.validator.unobtrusive.parse('#systemAccountForm');
            }).fail(function() {
                alert('Error loading form');
            });
        }

        function loadEditForm(id) {
            $('#modalTitle').text('Edit System Account');
            $.get('@Url.Action("GetCreateEditForm", "SystemAccount")', { id: id }, function(html) {
                $('#modalBody').html(html);
                $.validator.unobtrusive.parse('#systemAccountForm');
            }).fail(function() {
                alert('Error loading form');
            });
        }
    </script>
}
